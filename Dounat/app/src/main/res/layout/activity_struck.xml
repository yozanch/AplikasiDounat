<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".struck">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:background="@drawable/bank"/>

        <TextView
            android:id="@+id/namaAkun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/logo"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:text="Nama Akun   : Yozan Leo Lizandra"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/logo"
            android:layout_marginStart="5dp"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:layout_below="@+id/namaAkun"
            android:text="No Rekening : 43538213324"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp">

        <TextView
            android:id="@+id/nampe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Nama    :"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nampe"
            android:text="No Tlp   :"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/alt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/no"
            android:text="Alamat  :"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/data1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/nampe"
            android:layout_marginTop="25dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/data2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/no"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/data1"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/data3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/alt"
            android:layout_marginStart="5dp"
            android:layout_below="@+id/data2"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp">

        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textColor="@color/black"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Jumlah Barang"/>
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Total Bayar"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="10dp">
        <TextView
            android:id="@+id/c1"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Produk"/>
        <TextView
            android:id="@+id/c2"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Produk"/>
        <TextView
            android:id="@+id/c3"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:text="Produk"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Terimakasih telah berbelanja"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="italic"
        android:textAlignment="center"/>


</LinearLayout>

